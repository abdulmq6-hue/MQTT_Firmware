# ATG Monitoring System - Environment Configuration
# Copy this file to .env and update values for your environment

# ===========================================
# Database Configuration (TimescaleDB)
# ===========================================
DB_USER=atg_user
DB_PASSWORD=atg_secure_password
DB_NAME=atg_db
DB_HOST=localhost
DB_PORT=5432

# Full connection string (auto-generated in docker)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ===========================================
# MQTT Configuration (EMQX)
# ===========================================
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_WS_URL=ws://localhost:8083/mqtt
MQTT_USERNAME=admin
MQTT_PASSWORD=public
MQTT_CLIENT_ID=atg-backend

# EMQX Dashboard
EMQX_DASHBOARD_PASSWORD=public

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ===========================================
# Backend API Configuration
# ===========================================
NODE_ENV=development
BACKEND_PORT=3000
LOG_LEVEL=debug

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Frontend Configuration
# ===========================================
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# ===========================================
# Monitoring (Optional)
# ===========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090

# ===========================================
# SSL/TLS Configuration (Production)
# ===========================================
SSL_CERT_PATH=./config/ssl/cert.pem
SSL_KEY_PATH=./config/ssl/key.pem

# ===========================================
# Alert Notifications (Optional)
# ===========================================
# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_TO=alerts@yourcompany.com

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_FROM=+1234567890
ALERT_PHONE_TO=+1234567890
